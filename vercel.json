{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/s/([a-zA-Z0-9]{6})",
      "dest": "/api/redirect?id=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}